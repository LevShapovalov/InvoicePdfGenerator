@using Asp_Payments_Laba.Models.ViewModel
@model InvoiceViewModel

@{
    ViewData["Title"] = "Создание счёта";
}

@section Styles {
    <link rel="stylesheet" href="~/css/do_payment.css" asp-append-version="true" />
}

<div class="invoice-page">
    <div class="invoice-card">
        <form asp-controller="Home" asp-action="GetPayment" method="post" class="invoice-form">
            <div class="invoice-header">
                <div class="invoice-title-block">
                    <p class="invoice-subtitle">Формирование счёта</p>
                    <h1 class="invoice-title">Счёт на оплату</h1>
                </div>

                <div class="invoice-meta">
                    <div class="field-inline">
                        <label asp-for="NumInvoiceForPayment">№ счёта</label>
                        <input asp-for="NumInvoiceForPayment" type="number" />
                    </div>
                    <div class="field-inline">
                        <label asp-for="PaymentDate">Дата счёта</label>
                        <input asp-for="PaymentDate" type="date" />
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <!-- Даты поездки -->
            <section class="section">
                <div class="section-header">
                    <h2>Даты поездки</h2>
                    <p class="section-description">Укажите период, на который выставляется счёт.</p>
                </div>
                <div class="section-body section-grid-2">
                    <div class="field">
                        <label asp-for="DateTripFrom">От</label>
                        <input asp-for="DateTripFrom" type="date" />
                    </div>
                    <div class="field">
                        <label asp-for="DateTripTo">До</label>
                        <input asp-for="DateTripTo" type="date" />
                    </div>
                </div>
            </section>

            <!-- Покупатель -->
            <section class="section">
                <div class="section-header">
                    <h2>Покупатель</h2>
                    <p class="section-description">Реквизиты организации или индивидуального предпринимателя.</p>
                </div>
                <div class="section-body section-grid-2">
                    <div class="field">
                        <label asp-for="BuyerTypeBusiness">Форма регистрации</label>
                        <select asp-for="BuyerTypeBusiness">
                            <option value="ИП">ИП</option>
                            <option value="ООО">ООО</option>
                        </select>
                    </div>
                    <div class="field">
                        <label asp-for="BuyerName">Название компании</label>
                        <input asp-for="BuyerName" type="text" placeholder="YouTube" />
                    </div>
                    <div class="field">
                        <label asp-for="BuyerINN">ИНН</label>
                        <input asp-for="BuyerINN" type="number" />
                    </div>
                    <div class="field">
                        <label asp-for="BuyerKPP">КПП</label>
                        <input asp-for="BuyerKPP" type="number" />
                    </div>
                    <div class="field field-full">
                        <label asp-for="BuyerAddress">Юридический адрес</label>
                        <input asp-for="BuyerAddress" type="text" placeholder="Город, улица, дом" />
                    </div>
                </div>
            </section>

            <!-- Товары и услуги -->
            <section class="section">
                <div class="section-header">
                    <h2>Товары и услуги</h2>
                    <p class="section-description">Заполните стоимость тура или услуги.</p>
                </div>
                <div class="section-body section-grid-2">
                    @* <div class="field field-full">
                        <label asp-for="ProductName">Наименование услуги / тура</label>
                        <input asp-for="ProductName" type="text" placeholder="Тур в Сочи, 7 дней" />
                    </div> *@
                    <div class="field field-half">
                        <label asp-for="ProductCost">Цена, ₽</label>
                        <input asp-for="ProductCost" type="number" step="0.01" placeholder="0.00" />
                    </div>
                </div>
            </section>

            <div class="form-actions">
                <input class="primary-button" type="submit" value="Сформировать PDF" />
            </div>
        </form>
    </div>
</div>
